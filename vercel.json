{
    "version": 2,
    "builds": [
        {
            "src": "backend/src/index.js",
            "use": "@vercel/node"
        },
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "frontend/dist"
            }
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "backend/src/index.js"
        },
        {
            "source": "/uploads/(.*)",
            "destination": "backend/src/index.js"
        },
        {
            "source": "/(.*)",
            "destination": "frontend/dist/$1",
            "check": true
        },
        {
            "source": "/(.*)",
            "destination": "frontend/dist/index.html"
        }
    ]
}